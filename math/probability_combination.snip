const int N_MAX = 10001;
double combi_p[N_MAX][N_MAX];
void combi_init_p() {
    combi_p[0][0] = 1.0;
    for(int i=1; i<N_MAX; i++) combi_p[i][0]=combi_p[i-1][0]/2;
    for(int i=1; i<N_MAX; i++) {
        for(int j=1; j<i+1; j++) {
            combi_p[i][j]=(combi_p[i-1][j]+combi_p[i-1][j-1])/2;
        }
    }
}

